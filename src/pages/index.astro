---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Scarecrow from '../assets/Scarecrow.png'
---

<Layout title="404 Not Found Challenge">
	<!-- TODO: Add header content -->
	<header>
		<h2>404 NOT FOUND</h2>
	</header>
	<main>
		<section class="v-align">
			<img src={Scarecrow.src} alt="funny scarecrow" class="img"/>
		</section>
		<section>
			<h1>I have bad news for you</h1>
			<p>The page you are looking for might be removed or is temporarily unavailable</p>
			<button>BACK TO HOMEPAGE</button>
		</section>
	</main>
	<footer>
		<p>created by <a href="https://github.com/im-allan" target="_blank">im-allan</a> - devchallenges.io </p>
	</footer>
</Layout>

<style>
	/* Fonts-family */
  @import url('https://fonts.googleapis.com/css2?family=Inconsolata&family=Montserrat&family=Space+Mono&display=swap');

	/* Header */
	header{
		width: 85%;
		margin: auto;
	}
	header > h2 {
		color: #333;
		font-family: Inconsolata;
		font-size: 24px;
		font-weight: 700;
		letter-spacing: -1.92px;
		margin: 40px 0 180px 0;
	}

	/* Main */
	main {
		background-color: white;
		display: flex;
		flex-wrap: wrap;
		gap: 5rem;
		height: auto;
		justify-content: center;
		margin: auto;
		width: 85%;
	}

	/* Main - Scarecrow */
	.img {
		width: 100%;
	}
	section {
		flex: 45%;
	}

	/* Main - Text */
	section > h1 {
		font-family: 'Space Mono', monospace;
		font-size: 64px;
		font-style: normal;
		font-weight: 700;
		letter-spacing: -2.24px;
		line-height: normal;
		margin-top: 0;
	}
	section > p {
		color: #4F4F4F;
		font-family: 'Space Mono', monospace;
		font-size: 24px;
		font-style: normal;
		font-weight: 400;
		letter-spacing: -0.84px;
		line-height: normal;
		margin: 36px 0 64px 0;
		width: 60%;
	}
	section > button {
		background-color: #333333;
		color: #fff;
		flex-shrink: 0;
		font-family: Space Mono;
		font-size: 1rem;
		font-weight: 700;
		height: 68px;
		letter-spacing: -0.49px;
		margin: 0 0 306px 0;
		width: 216px;
	}

	/* Footer */
	footer {
		align-items: end;
		display: flex;
		font-family: 'Montserrat', sans-serif;
		font-size: 1rem;
		justify-content: center;
		width: 100%;
	}
	footer > p {
		color: #BDBDBD;
		font-weight: 500;
	}
	footer > p > a {
		color: #BDBDBD;
		font-weight: 700;
	}

	/* Media queries */
	@media (max-width: 700px) {
		section > h1 {
			font-size: 48px;
			letter-spacing: -1.68px;
		}
		section > p {
			font-size: 18px;
			letter-spacing: -0.63px;
			margin: 30px 0 66px 0;
			width: 100%;
		}
		section > button {
			margin: 0 0 114px 0;
		}
		header > h2 {
			margin: 20px 0 64px 0;
		}
	}
</style>
